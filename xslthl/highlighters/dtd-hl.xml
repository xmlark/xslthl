<highlighters>
    <highlighter type="multiline-comment">
        <start>&lt;!--</start>
        <end>--></end>
    </highlighter>
    <highlighter type="string">
        <string>"</string>
    </highlighter>
    <highlighter type="string">
        <string>'</string>
    </highlighter>
    <highlighter type="hexnumber">
        <prefix>&amp;#x</prefix>
        <suffix>;</suffix>
        <ignoreCase />
    </highlighter>
    <highlighter type="number">
        <point>.</point>
    </highlighter>
    <highlighter type="keywords">
	<beginChars>&lt;</beginChars>
	<partChars>&lt;!</partChars>
        <keyword>&lt;!ELEMENT</keyword>
        <keyword>&lt;!ATTLIST</keyword>
        <keyword>&lt;!ENTITY</keyword>
        <keyword>&lt;!NOTATION</keyword>
	<style>decl</style>
    </highlighter>
    <highlighter type="regex">
         <!-- Declaration closing delimiter. -->
	 <pattern>[>]</pattern>
	 <style>decl</style>
    </highlighter>
    <highlighter type="keywords">
	<beginChars>#</beginChars>
	<partChars>#</partChars>
        <keyword>EMPTY</keyword>
        <keyword>ANY</keyword>
        <keyword>#PCDATA</keyword>
    </highlighter>
    <highlighter type="keywords">
        <keyword>CDATA</keyword>
        <keyword>ID</keyword>
        <keyword>IDREF</keyword>
        <keyword>IDREFS</keyword>
        <keyword>ENTITY</keyword>
        <keyword>ENTITIES</keyword>
        <keyword>NMTOKEN</keyword>
        <keyword>NMTOKENS</keyword>
	<style>attributetype</style>
    </highlighter>
    <highlighter type="keywords">
	<beginChars>#</beginChars>
	<partChars>#</partChars>
        <keyword>#REQUIRED</keyword>
        <keyword>#IMPLIED</keyword>
        <keyword>#FIXED</keyword>
	<style>attributedefault</style>
    </highlighter>
    <highlighter type="regex">
         <!-- Element, entity, or notation name. -->
	 <!-- '(?<...)' lookbehind needs a known length, so limit
	      white-space length with '\s{1,10}'. -->
	 <pattern>(?&lt;=&lt;!(ELEMENT|ATTLIST|ENTITY( %)?|NOTATION)\s{1,10})([-_:\w]+)</pattern>
	 <style>name</style>
    </highlighter>
    <highlighter type="regex">
         <!-- Attribute name. -->
	 <!-- '(?<...)' lookbehind needs a known length, so limit
	      white-space and element name lengths. -->
	 <pattern>(?&lt;=&lt;!ATTLIST\s{1,10}[-_:\w]{1,30}\s{1,10})([-_:\w]+)</pattern>
	 <style>attribute</style>
    </highlighter>
    <highlighter type="regex">
         <!-- Parameter entity. -->
	 <pattern>%([-_:\w]+);</pattern>
	 <style>parameterentity</style>
    </highlighter>
    <highlighter type="regex">
         <!-- Parameter entity declaration. -->
	 <pattern>[%]</pattern>
	 <style>parameterentity</style>
    </highlighter>
    <highlighter type="regex">
         <!-- Occurrence indicator. -->
	 <pattern>[?*+]</pattern>
	 <style>occurrence</style>
    </highlighter>
    <highlighter type="regex">
         <!-- Delimiter. -->
	 <pattern>[(|)]</pattern>
	 <style>delimiter</style>
    </highlighter>
    <highlighter type="keywords">
        <style>tag</style>
	<beginChars>&lt;></beginChars>
	<partChars>!</partChars>
	<exclusiveChars />
        <keyword>&lt;!</keyword>
        <keyword>></keyword>
    </highlighter>
</highlighters>
